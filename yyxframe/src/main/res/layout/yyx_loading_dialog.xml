<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/yyx_frame_loading_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/Z10px"
    android:background="@color/white"
    android:orientation="horizontal">


    <ProgressBar
        android:id="@+id/yyx_frame_loading_progressbar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="@dimen/Z24px"
        android:layout_height="@dimen/Z24px"
        android:layout_gravity="center"/>


    <TextView
        android:id="@+id/yyx_frame_loading_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/yyx_loading_dialog_message"
        android:textColor="@color/YYXFrame_loading_dialog_message"
        android:textSize="@dimen/Z8px" />

</LinearLayout>
